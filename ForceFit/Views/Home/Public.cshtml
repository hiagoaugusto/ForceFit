@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Bem-vindo à Strong Fit</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #1f4037, #99f2c8);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: white;
            text-align: center;
        }

        h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2rem;
            margin-bottom: 30px;
        }

        .btn-login {
            padding: 12px 30px;
            font-size: 1rem;
            border: none;
            border-radius: 8px;
            background-color: #ffffff;
            color: #1f4037;
            cursor: pointer;
            transition: 0.3s;
            text-decoration: none;
        }

            .btn-login:hover {
                background-color: #e0e0e0;
            }
    </style>
</head>
<body>
    <h1>Bem-vindo à Strong Fit 💪</h1>
    <p>Sistema de gerenciamento de treinos para alunos e personal trainers.</p>
    <a href="/Account/Login" class="btn-login">Entrar</a>
</body>
</html>
